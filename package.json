{
  "name": "politech",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "concurrently \"npm --workspace=packages/backend run dev\" \"npm --workspace=packages/frontend run dev\"",
    "dev:docker": "docker compose up",
    "build": "docker compose build",
    "db:migrate": "docker compose exec backend npx prisma migrate dev",
    "db:studio": "docker compose exec backend npx prisma studio"
  },
  "devDependencies": {
    "concurrently": "^8.2.0"
  }
}